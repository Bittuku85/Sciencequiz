rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - LESS RESTRICTIVE FOR TESTING
    // WARNING: DO NOT USE IN PRODUCTION
    
    // Allow all authenticated users to read/write (for development only)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow unauthenticated read for tournaments (testing only)
    match /tournaments/{tournamentId} {
      allow read: if true;
    }
    
    // Allow unauthenticated read for settings (testing only)
    match /settings/{settingId} {
      allow read: if true;
    }
  }
}